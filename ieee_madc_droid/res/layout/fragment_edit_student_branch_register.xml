<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_layout_margin"
            android:background="@android:color/white"
            android:columnCount="2"
            android:padding="@dimen/default_padding"
            android:rowCount="6"
            tools:context="pt.up.fe.nuieee.whatsup.ui.EditStudentBranchRegisterFragment" >

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="36dp"
                android:layout_row="0"
                android:gravity="center"
                android:padding="10dp"
                android:text="Welcome IEEEer! Provide us with the required information about your Student Branch."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Student Branch Name" />

            <EditText
                android:id="@+id/create_student_branch_register_student_branch_name"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:text="" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Location" />

            <EditText
                android:id="@+id/create_student_branch_register_location"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2"
                android:text="" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Webpage" />

            <EditText
                android:id="@+id/create_student_branch_register_webpage"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3"
                android:text="" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Email" />

            <EditText
                android:id="@+id/create_student_branch_register_email"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4"
                android:text="" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:text="Password" />

            <EditText
                android:id="@+id/create_student_branch_register_password"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="5"
                android:text="" />
        </GridLayout>

        <Button
            android:id="@+id/bt_create_student_branch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <AbsoluteLayout style="@style/CardBottomBar" />
    </LinearLayout>

</ScrollView>