<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_layout_margin"
            android:background="@android:color/white"
            android:columnCount="2"
            android:padding="@dimen/default_padding"
            android:rowCount="6"
            tools:context="pt.up.fe.nuieee.whatsup.ui.EditEventModelFragment" >

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Title" />

            <EditText
                android:id="@+id/create_event_model_title"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:text="" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Event Type" />

            <Spinner
                android:id="@+id/create_event_model_event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="1"
                android:inputType="number" />


            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Tags" />

            <EditText
                android:id="@+id/create_event_model_tags"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2"
                android:text="" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Date" />

            <Button
                android:id="@+id/create_event_model_date"
                style="?android:attr/spinnerStyle"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3"
                android:text="" />

            <TextView
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Description" />

            <EditText
                android:id="@+id/create_event_model_description"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4"
                android:text="" />

            <Button
                android:id="@+id/create_event_model_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_row="5"
                android:text="Submit" >
            </Button>
        </GridLayout>

        <AbsoluteLayout style="@style/CardBottomBar" />
    </LinearLayout>

</ScrollView>