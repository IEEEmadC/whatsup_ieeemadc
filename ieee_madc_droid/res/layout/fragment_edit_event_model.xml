<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="7"
            android:layout_margin="@dimen/default_layout_margin"
            android:padding="@dimen/default_padding"
            android:background="@android:color/white"
            tools:context="pt.up.fe.nuieee.whatsup.ui.EditEventModelFragment">

            <TextView
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Title"/>
            <EditText
                android:id="@+id/create_event_model_title"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="fill_horizontal"
                android:text=""/>
            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Event Type"/>
            <EditText
                android:id="@+id/create_event_model_event_type"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="fill_horizontal"
                android:inputType="number"
                android:text=""/>
            <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Student Branch"/>
            <EditText
                android:id="@+id/create_event_model_student_branch"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="fill_horizontal"
                android:text=""/>
            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Tags"/>
            <EditText
                android:id="@+id/create_event_model_tags"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="fill_horizontal"
                android:text=""/>
            <TextView
                android:layout_column="0"
                android:layout_row="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Date"/>
            <Button
                android:id="@+id/create_event_model_date"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="4"
                android:layout_gravity="fill_horizontal"
                android:text=""
                style="?android:attr/spinnerStyle"/>
            <TextView
                android:layout_column="0"
                android:layout_row="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryText"
                android:text="Description"/>
            <EditText
                android:id="@+id/create_event_model_description"
                android:layout_column="1"
                android:layout_row="5"
                android:layout_gravity="fill_horizontal"
                android:text=""/>

        </GridLayout>

        <AbsoluteLayout
            style="@style/CardBottomBar"
            />
    </LinearLayout>
</ScrollView>